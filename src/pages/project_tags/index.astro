---
import { getCollection } from "astro:content";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import Tag from "@components/Project_Tag.astro";
import getUniqueTags from "@utils/getUniqueTagsForProjects";
import { SITE } from "@config";

const projects = await getCollection("project");

let tags = getUniqueTags(projects);
---

<Layout title={`Project Tags | ${SITE.title}`}>
  <Header activeNav="project_tags" />
  <Main pageTitle="Project Tags" pageDesc="All the tags used in my projects.">
    <ul>
      {tags.map(({ tag }) => <Tag {tag} size="lg" />)}
    </ul>
  </Main>
  <Footer />
</Layout>
